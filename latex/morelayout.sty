%%% morelayout.sty -- Layout
%%%

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{morelayout}
[2018/04/30 The layout settings used in the argon classes]

% Space between paragraphs
\setlength{\parindent}{1.5em}
\abnormalparskip{0em}

% \nouppercaseheads

% Plain headers and footers
\makepagestyle{myps}
\makeevenfoot{myps}{\normalfont\thepage}{}{}
\makeoddfoot{myps}{}{}{\normalfont\thepage}

% Set header and footer heights
\setlength{\headheight}{15pt}
\setlength{\footskip}{2\baselineskip}

% Empty part page style
\aliaspagestyle{part}{empty}
\aliaspagestyle{chapter}{myps}

% Do not number anything
\setsecnumdepth{none}

% Chapter style
\makechapterstyle{mychapter}{%
   \renewcommand{\chapterheadstart}{}
   \renewcommand{\printchaptername}{}
   \renewcommand{\chapternamenum}{}
   \renewcommand{\printchapternum}{}
   \renewcommand{\afterchapternum}{}
   \renewcommand{\printchaptertitle}[1]{%
     \raggedright\uppercaps{##1}}
   \renewcommand{\afterchaptertitle}{%
     \vskip\onelineskip \hrule\vskip\onelineskip}
}

% (Sub)section styles
\setsecheadstyle{\raggedright\scshape\needspace{1em}\lowercase}
\setbeforesecskip{-1em minus 0.5em}
\setaftersecskip{1em minus 0.5em}

\setsubsecheadstyle{\raggedright\normalfont\itshape\needspace{1em}}
\setbeforesubsecskip{-1em minus 0.5em}
\setaftersubsecskip{1em minus 0.5em}

% Allows customisation of lists
\usepackage{enumitem}

% Use bullet for itemize regardless of indentation
\setlist[itemize]{label=\textbullet}

% Remove all vertical spacing in all lists
\setlist{nosep}

% Place list labels in margin
\setlist[1]{leftmargin=0em}
\setlist[2]{leftmargin=1em}
\setlist[3]{leftmargin=2em}
\setlist[4]{leftmargin=3em}
\setlist[5]{leftmargin=4em}

