\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{moretype}
[2018/04/30 Typographic settings for the argon classes]

% Avoid widows, orphans, and lines sticking into the margin
\clubpenalty=500
\widowpenalty=1000
\tolerance=300

% Set a point size of 11 and leading of 15pt for the body text
\renewcommand\Large{\@setfontsize\Large{16pt}{22pt}}
\renewcommand\large{\@setfontsize\large{13pt}{17pt}}
\renewcommand\normalsize{\@setfontsize\normalsize{11pt}{15pt}}
\renewcommand\small{\@setfontsize\small{10pt}{13pt}}

% Set two convenient amounts of empty space -- \myskip and \mysmallskip
\newskip\myskipamount
\myskipamount=1.0em plus 0.5em minus 0.2em
\newcommand{\mybreak}{\par\ifdim\lastskip<\myskipamount
  \removelastskip\penalty-100\myskip\fi}
\newcommand{\myskip}{\vspace\myskipamount}

\newskip\mysmallskipamount
\mysmallskipamount=0.5em plus 0.1em minus 0.1em
\newcommand{\mysmallbreak}{\par\ifdim\lastskip<\mysmallskipamount
  \removelastskip\penalty-100\mysmallskip\fi}
\newcommand{\mysmallskip}{\vspace\mysmallskipamount}

% Create \newthought command
\def\newthought #1 #2 #3 {\myskip\noindent {\lowercaps{#1}} {\lowercaps{#2}} {\lowercaps{#3}} }

% Allow utf8 input
\RequirePackage[utf8]{inputenc}

% Microtypographic awesomeness!
\RequirePackage[
  final,
  kerning=true,
  spacing=true,
]{microtype}

% Disable purely ornamental Th ligature
\DisableLigatures[T]{encoding={*}}

% Add extra space around some analphabetics as a hybrid between English and
% French spacing
\SetExtraKerning[unit=space]
  {
    encoding={*},
    size={footnotesize,small,normalsize}
  }{
  \textendash={200,200},      % en-dash
   "28={ ,250},               % left parenthesis
   "29={250, },               % right parenthesis
   ?={250, },                 % question mark
   !={150, },                 % exclamation mark
   :={150, },                 % colon
   ;={150, },                 % semicolon
   \textquotedblleft={ ,150}, % left quotation mark
   \textquotedblright={150, } % right quotation mark
 }

% Use the Minion Pro font
\usepackage[
  fullfamily,     % Use all available weights
  minionint,      % Use the integral symbols from MinionPro instead of MnSymbol
  footnotefigures % Use native footnote figures
]{MinionPro}

% Use built-in letterspaced small caps
\renewcommand{\scdefault}{ssc}

% Use proportional text figures
\figureversion{
  text,        % Text figures
  proportional % Proportional figures
}

% Use tabular figures in some places
\usepackage[ % Use them for ...
  toc,       % toc item labels
  eqno,      % equation numbers
  enum,      % enumerate item labels
  bib,       % bibliography item labels
  lineno     % line numbers
]{tabfigures}

% Ornaments
\RequirePackage{fourier-orns}

% Same amount of space between sentences as between words
\frenchspacing

