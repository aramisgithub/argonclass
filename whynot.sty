%%% Commands

% Set two convenient amounts of empty space
\newskip\myskipamount
\myskipamount=1.0em plus 0.5em minus 0.2em
\newcommand{\mybreak}{\par\ifdim\lastskip<\myskipamount
  \removelastskip\penalty-100\myskip\fi}
\newcommand{\myskip}{\vspace\myskipamount}

\newskip\mysmallskipamount
\mysmallskipamount=0.5em plus 0.1em minus 0.1em
\newcommand{\mysmallbreak}{\par\ifdim\lastskip<\mysmallskipamount
  \removelastskip\penalty-100\mysmallskip\fi}
\newcommand{\mysmallskip}{\vspace\mysmallskipamount}

% Create \newthought command
\def\newthought #1 #2 #3 {\myskip\noindent {\lowercaps{#1}} {\lowercaps{#2}} {\lowercaps{#3}} }

% Commands for letterspaced capitals
\newcommand{\lowercaps}[1]{\textsc{\MakeLowercase{#1}}}
\newcommand{\uppercaps}[1]{\textsc{\MakeUppercase{#1}}}

% For people that use pandoc
\providecommand{\tightlist}{
  \setlength{\itemsep}{0pt}\setlength{\parskip}{0pt}}

